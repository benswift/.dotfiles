[
  {
    "bindings": {
      "cmd-l": "project_panel::ToggleFocus",
      "cmd-shift-y": "workspace::CopyRelativePath",
      "alt-p": "projects::OpenRecent",
      "alt-g": "git_panel::ToggleFocus",
      "alt-c": [
        "task::Spawn",
        { "task_name": "claude", "reveal_target": "center" }
      ],
      "alt-m": [
        "task::Spawn",
        { "task_name": "neomutt", "reveal_target": "center" }
      ]
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "space f s": "workspace::Save",
      "space f S": "workspace::SaveAll",
      "alt-j": "editor::SelectLargerSyntaxNode",
      "alt-k": "editor::SelectSmallerSyntaxNode",
      "ctrl-j": "editor::AddSelectionBelow",
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "q": "vim::MiniQuotes",
      "b": "vim::MiniBrackets"
    }
  }
]
