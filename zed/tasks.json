[
  {
    "label": "Prettify file in-place",
    "command": "prettier",
    "args": ["--prose-wrap", "always", "--write", "$ZED_FILE"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "never"
  },
  {
    "label": "claude",
    "command": "sh",
    "args": ["-c", "claude-tmux \"$(basename \"$ZED_WORKTREE_ROOT\")\" \"$ZED_WORKTREE_ROOT\""],
    "reveal": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": false
  },
  {
    "label": "gitu",
    "command": "gitu"
  },
  {
    "label": "neomutt",
    "command": "neomutt",
    "reveal": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": false
  }
]
