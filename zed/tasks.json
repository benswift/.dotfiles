[
  {
    "label": "Unwrap selection to clipboard",
    "command": "printenv ZED_SELECTED_TEXT | prettier --stdin-filepath temp.md --prose-wrap never | pbcopy",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "shell": "system"
  },
  {
    "label": "Prettify file in-place",
    "command": "prettier",
    "args": ["--prose-wrap", "always", "--write", "$ZED_FILE"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "never"
  },
  {
    "label": "claude",
    "command": "claude-tmux",
    "reveal": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": false
  },
  {
    "label": "claude (new session)",
    "command": "claude-tmux",
    "args": ["--new"],
    "reveal": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": false
  },
  {
    "label": "gitu",
    "command": "gitu"
  },
  {
    "label": "neomutt",
    "command": "tmux new-session -A -s neomutt neomutt",
    "reveal": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": false
  }
]
