[
  {
    "label": "Prettify file in-place",
    "command": "prettier",
    "args": ["--prose-wrap", "always", "--write", "$ZED_FILE"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "never"
  },
  {
    "label": "claude",
    "command": "claude --dangerously-skip-permissions",
    "reveal": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": false
  },
  {
    "label": "claude (debugger)",
    "command": "gdb",
    "args": ["-ex", "run", "-ex", "bt", "-ex", "quit", "--args", "claude", "--dangerously-skip-permissions"],
    "reveal": "always",
    "use_new_terminal": true,
    "allow_concurrent_runs": false
  },
  {
    "label": "gitu",
    "command": "gitu"
  }
]
