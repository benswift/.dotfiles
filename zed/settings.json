{
  "context_servers": {
    "ash_ai": {
      "enabled": false,
      "source": "custom",
      "command": "mcp-proxy",
      "args": ["http://localhost:4000/ash_ai/mcp"]
    },
    "tidewave": {
      "source": "custom",
      "command": "mcp-proxy",
      "args": ["http://localhost:4000/tidewave/mcp"]
    }
  },
  "ssh_connections": [
    {
      "host": "cybersonic",
      "projects": [
        {
          "paths": ["~/Code/trajectory-tracer"]
        }
      ]
    },
    {
      "host": "weddle",
      "projects": [
        {
          "paths": ["/home/ben/.dotfiles"]
        },
        {
          "paths": ["/home/ben/.nb/home"]
        },
        {
          "paths": ["/home/ben/Code/panic"]
        },
        {
          "paths": ["~/Code/panic_tda"]
        }
      ]
    }
  ],
  "diagnostics": {
    "include_warnings": true
  },
  "theme": "Tokyo Night Storm",
  "languages": {
    "Elixir": {
      "language_servers": [
        "expert",
        "!elixir-ls",
        "!next-ls",
        "!lexical",
        "..."
      ]
    },
    "Python": {
      "language_servers": ["ruff", "ty", "!basedpyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Markdown": {
      "format_on_save": "on",
      "show_completions_on_input": false,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--prose-wrap",
            "always",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "Typst": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "typstyle",
          "arguments": ["--wrap-text"]
        }
      }
    }
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": false,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": false,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking"
    }
  },
  "close_on_file_delete": true,
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 15,
  "buffer_font_family": "Operator Mono",
  "file_scan_inclusions": ["mise.local.toml"],
  "use_system_window_tabs": true
}
