{
  "ssh_connections": [
    {
      "host": "cybersonic",
      "projects": [
        {
          "paths": ["~/Code/trajectory-tracer"]
        }
      ]
    },
    {
      "host": "weddle",
      "projects": [
        {
          "paths": ["~/Code/panic_tda"]
        }
      ]
    }
  ],
  "diagnostics": {
    "include_warnings": true
  },
  "theme": "Tokyo Night Storm",
  "languages": {
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--prose-wrap",
            "always",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  },
  "assistant": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": false,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": false,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "show_hints": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet-thought"
    },
    "version": "2",
    "default_open_ai_model": null,
    "provider": {
      "name": "openai",
      "default_model": "gpt-4o-mini",
      "available_models": []
    }
  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 15,
  "buffer_font_family": "Operator Mono",
  "file_scan_inclusions": ["mise.local.toml"]
}
