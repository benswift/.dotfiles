{
  "git_panel": {
    "status_style": "label_color",
  },
  "project_panel": {
    "hide_root": true,
  },
  "terminal": {},
  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions",
    },
    "codex": {
      "default_model": "gpt-5.2/medium",
      "default_mode": "full-access",
    },
  },
  "context_servers": {
    "tidewave": {
      "env": {},
      "command": "mcp-proxy",
      "args": ["http://localhost:${PORT:-4000}/tidewave/mcp"],
    },
  },
  "ssh_connections": [
    {
      "host": "cybersonic",
      "args": [],
      "projects": [
        {
          "paths": ["~/Code/trajectory-tracer"],
        },
      ],
    },
    {
      "host": "weddle",
      "args": [],
      "projects": [
        {
          "paths": ["/home/ben/.dotfiles"],
        },
        {
          "paths": ["/home/ben/.nb/home"],
        },
        {
          "paths": ["/home/ben/Code/elixir/hendrix-homeostat"],
        },
        {
          "paths": ["/home/ben/Code/extemporelang/extempore"],
        },
        {
          "paths": ["/home/ben/Code/panic"],
        },
        {
          "paths": ["~/Code/panic_tda"],
        },
      ],
    },
  ],
  "diagnostics": {
    "include_warnings": true,
  },
  "theme": "Tokyo Night Storm",
  "languages": {
    "Elixir": {
      "language_servers": [
        "expert",
        "!elixir-ls",
        "!next-ls",
        "!lexical",
        "...",
      ],
    },
    "HEEX": {
      "language_servers": [
        "expert",
        "!elixir-ls",
        "!next-ls",
        "!lexical",
        "...",
      ],
    },
    "Python": {
      "language_servers": [
        "ty",
        "ruff",
        "!basedpyright",
        "!pyrefly",
        "!pyright",
        "!pylsp",
      ],
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.organizeImports.ruff",
        },
        {
          "code_action": "source.fixAll.ruff",
        },
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "Markdown": {
      "format_on_save": "on",
      "show_completions_on_input": false,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--prose-wrap",
            "always",
            "--stdin-filepath",
            "{buffer_path}",
          ],
        },
      },
    },
    "Typst": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "typstyle",
          "arguments": ["--wrap-text"],
        },
      },
    },
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4",
    },
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": false,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": false,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "web_search": true,
        },
        "enable_all_context_servers": true,
        "context_servers": {},
      },
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking",
    },
  },
  "close_on_file_delete": true,
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 15,
  "buffer_font_family": "Operator Mono",
  "file_scan_inclusions": ["mise.local.toml"],
  "use_system_window_tabs": true,
  "lsp": {
    "expert": {
      "binary": {
        "arguments": ["--stdio"],
      },
    },
  },
}
