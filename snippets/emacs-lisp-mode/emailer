# -*- mode: snippet -*-
# name: emailer
# key: emailer
# --
(-each
    '(${1:("name" "email-address")})
  (lambda (x)
    (cl-destructuring-bind (name email) x
      (ben-send-anu-email email
                          "${2:subject}"
                          (format "Hi %s

$0

Cheers,
Ben
"
                                name)))))