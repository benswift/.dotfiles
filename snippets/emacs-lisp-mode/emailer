(-each
    '($1)
  (lambda (data)
    (cl-destructuring-bind (${2:bindings}) data
      (ben-send-anu-email ${3:email}
                          "${4:subject}"
                          (format "Hi %s

$0

Cheers,
Ben
"
                                name)))))