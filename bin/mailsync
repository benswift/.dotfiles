#!/usr/bin/env bash
#
# Mail sync script for aerc + mbsync + notmuch
# Syncs all email accounts and updates notmuch index
#
set -euo pipefail

# Colours for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if we need to update notmuch on exit
needs_notmuch_update=false

# Function to print status messages
print_status() {
    echo -e "${GREEN}[$(date '+%H:%M:%S')]${NC} $1"
}

print_error() {
    echo -e "${RED}[$(date '+%H:%M:%S')] ERROR:${NC} $1" >&2
}

print_warning() {
    echo -e "${YELLOW}[$(date '+%H:%M:%S')] WARNING:${NC} $1"
}

# Cleanup function to run on exit
cleanup() {
    local exit_code=$?
    if [ "$needs_notmuch_update" = true ]; then
        echo ""
        print_warning "Script interrupted - updating notmuch database to maintain consistency..."
        notmuch new --quiet
        print_status "Notmuch database updated"
    fi
    exit $exit_code
}

# Set up trap for cleanup on interrupt/exit
trap cleanup EXIT INT TERM

# Check dependencies
for cmd in mbsync notmuch; do
    if ! command -v "$cmd" &> /dev/null; then
        print_error "$cmd is not installed"
        exit 1
    fi
done

# Track if any sync had errors
sync_errors=0

# Reconcile archive tags with physical locations
reconcile_archives() {
    local account="$1"
    local count=0
    
    while IFS= read -r file; do
        if [[ "$file" == *"/${account}/INBOX/"* ]]; then
            dest="${file/\/INBOX\//\/Archive\/}"
            mkdir -p "$(dirname "$dest")"
            mv "$file" "$dest" 2>/dev/null && ((count++)) || true
        fi
    done < <(notmuch search --output=files "tag:archive AND path:${account}/INBOX/**")
    
    if [ $count -gt 0 ]; then
        print_status "Moved $count ${account} message(s) to Archive"
        needs_notmuch_update=true
    fi
    return $count
}

print_status "Reconciling archive tags with maildir folders..."
personal_moved=0
anu_moved=0
reconcile_archives "personal" || personal_moved=$?
reconcile_archives "anu" || anu_moved=$?

# Update notmuch if files were moved
if [ "$needs_notmuch_update" = true ]; then
    print_status "Updating notmuch database..."
    notmuch new --quiet
    needs_notmuch_update=false
fi

# Sync accounts
for account in personal anu; do
    print_status "Syncing ${account^} account..."
    if output=$(mbsync "$account" 2>&1); then
        print_status "${account^} account synced successfully"
        needs_notmuch_update=true
    else
        print_warning "${account^} account sync had issues"
        sync_errors=$((sync_errors + 1))
        needs_notmuch_update=true
        # Only show output if there was an error
        echo "$output" | sed 's/^/  /'
    fi
done

# Update notmuch database
if [ "$needs_notmuch_update" = true ]; then
    print_status "Updating notmuch index..."
    if notmuch new 2>&1 | grep -v "^No new mail\.$"; then
        print_status "Notmuch index updated"
    fi
    needs_notmuch_update=false
fi

# Summary
echo ""
if [ $sync_errors -eq 0 ]; then
    print_status "Mail sync completed successfully!"
else
    print_warning "Mail sync completed with $sync_errors account(s) having issues"
fi

# Show new message count (excluding spam and deleted)
new_count=$(notmuch count 'tag:new AND NOT tag:spam AND NOT tag:deleted')
unread_count=$(notmuch count 'tag:unread AND NOT tag:spam AND NOT tag:deleted')

if [ "$new_count" -gt 0 ]; then
    print_status "You have $new_count new message(s)"
fi
if [ "$unread_count" -gt 0 ]; then
    print_status "Total unread: $unread_count message(s)"
fi