# Personal (Fastmail) account settings

# Email addresses for this account
alternates ^benswift@fastmail\\.com$ ^ben@benswift\\.me$

# Folder settings
set from = "ben@benswift.me"
set folder = ~/Maildir/personal/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +"Sent Items"
set trash = +Trash

# Sending mail via msmtp
set sendmail = "msmtp -a personal"
set use_from = yes
set envelope_from = yes

# Personal account specific settings
set status_format = "[PERSONAL] %f [%M/%m] %?n?%n new? %?d?%d del? %?t?%t tag?"

# Account-specific colours
color status black blue

# Account-specific search (restricted to this account)
macro index / "<shell-escape>mu find --clearlinks --format=links --linksdir=~/.mu/results maildir:/personal/ " "search personal"
