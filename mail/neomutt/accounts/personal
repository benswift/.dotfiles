# Personal (Fastmail) account settings

# Clear previous account settings
unset signature
set reverse_name = yes

# Email addresses for this account
alternates ^benswift@fastmail\\.com$ ^ben@benswift\\.me$

# Folder settings
set from = "benswift@fastmail.com"
set folder = ~/Maildir/personal/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +"Sent Items"
set trash = +Trash

# Sending mail via msmtp
set sendmail = "/usr/local/bin/msmtp -a personal"
set use_from = yes
set envelope_from = yes

# Personal account specific settings
set signature = ""
set status_format = "[PERSONAL] %f [%M/%m] %?n?%n new? %?d?%d del? %?t?%t tag?"

# Account-specific colours
color status black blue

# Reply settings
set fast_reply = yes
set include = yes
set forward_format = "Fwd: %s"
set forward_quote = yes

# Account-specific keybindings already defined in main config