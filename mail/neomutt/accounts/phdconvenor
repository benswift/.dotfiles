# PhD Convenor (delegated mailbox) account settings

# Email addresses for this account
alternates ^phdconvenor\\.cybernetics@anu\\.edu\\.au$

# Folder settings
set from = "phdconvenor.cybernetics@anu.edu.au"
set folder = ~/Maildir/phdconvenor/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +"Sent Items"
set trash = +"Deleted Items"

# Sending mail via msmtpq (with queue support)
set sendmail = "/Users/ben/.dotfiles/bin/msmtpq-send -a phdconvenor"
set use_from = yes
set envelope_from = yes

# PhD Convenor specific settings
set status_format = "[PHD CONVENOR] %f [%M/%m] %?n?%n new? %?d?%d del? %?t?%t tag?"

# Account-specific colours (using Tokyo Night Storm theme)
color status #24283b #9ece6a

# Account-specific search (restricted to this account)
macro index / "<shell-escape>~/.config/neomutt/scripts/mu-search.sh /phdconvenor/<enter><change-folder-readonly>~/.mu/results<enter>" "search phdconvenor"
