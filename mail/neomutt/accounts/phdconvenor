# PhD Convenor (delegated mailbox) account settings

# Clear previous account settings
unset signature
set reverse_name = yes

# Email addresses for this account
alternates ^phdconvenor\\.cybernetics@anu\\.edu\\.au$

# Folder settings
set from = "phdconvenor.cybernetics@anu.edu.au"
set folder = ~/Maildir/phdconvenor/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +"Sent Items"
set trash = +"Deleted Items"

# Sending mail via msmtp
set sendmail = "msmtp -a phdconvenor"
set use_from = yes
set envelope_from = yes

# PhD Convenor specific settings
set signature = ""
set status_format = "[PHD CONVENOR] %f [%M/%m] %?n?%n new? %?d?%d del? %?t?%t tag?"

# Account-specific colours
color status black green

# Reply settings
set fast_reply = yes
set include = yes
set forward_format = "Fwd: %s"
set forward_quote = yes

# Account-specific search (restricted to this account)
macro index / "<shell-escape>mu find --clearlinks --format=links --linksdir=~/.mu/results maildir:/phdconvenor/ " "search phdconvenor"
