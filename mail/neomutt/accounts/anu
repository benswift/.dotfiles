# ANU (Office 365) account settings

# Email addresses for this account
alternates ^u2548636@anu\\.edu\\.au$ ^ben\\.swift@anu\\.edu\\.au$

# Folder settings
set from = "ben.swift@anu.edu.au"
set folder = ~/Maildir/anu/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +"Sent Items"
set trash = +Deleted\ Items

# Sending mail via msmtp
set sendmail = "msmtp -a anu"
set use_from = yes
set envelope_from = yes

# ANU account specific settings
set status_format = "[ANU] %f [%M/%m] %?n?%n new? %?d?%d del? %?t?%t tag?"

# Account-specific colours (using Tokyo Night Storm theme)
color status #24283b #bb9af7

# Account-specific search (restricted to this account)
macro index / "<shell-escape>~/.config/neomutt/scripts/mu-search.sh /anu/<enter><change-folder-readonly>~/.mu/results<enter>" "search anu"
