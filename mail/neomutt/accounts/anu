# ANU (Office 365) account settings

# Clear previous account settings
unset signature
set reverse_name = yes

# Email addresses for this account
alternates ^u2548636@anu\\.edu\\.au$ ^ben\\.swift@anu\\.edu\\.au$

# Folder settings
set from = "ben.swift@anu.edu.au"
set folder = ~/Maildir/anu/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +"Sent Items"
set trash = +Deleted\ Items

# Sending mail via msmtp
set sendmail = "msmtp -a anu"
set use_from = yes
set envelope_from = yes

# ANU account specific settings
set signature = ""
set status_format = "[ANU] %f [%M/%m] %?n?%n new? %?d?%d del? %?t?%t tag?"

# Account-specific colours
color status black red

# Reply settings
set fast_reply = yes
set include = yes
set forward_format = "Fwd: %s"
set forward_quote = yes

# Account-specific search (restricted to this account)
macro index / "<shell-escape>mu find --clearlinks --format=links --linksdir=~/.mu/results maildir:/anu/ " "search anu"